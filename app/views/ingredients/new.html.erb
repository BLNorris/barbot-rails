<div class="row">
  <div class="small-12 columns">
    NEW INGREDIENT PAGE

  </div>
</div>
<div class="row">
  <div class="small-12 medium-4 columns">
    Drink Picture Goes Here
  </div>
  
  <div class="small-12 medium-8 columns">
    <div class="row">
      
      <%= form_for @ingredient do |f| %>

      <div class="small-12 medium-4 columns">
        <%= f.label :name, "Ingredient Name" %>
      </div>
      <div class="small-12 medium-8 columns">
        <%= f.text_field :name %>
      </div>
      <div class="small-12 medium-4 columns">
        <%= f.label :desc, "Tell me about it" %>
      </div>
      <div class="small-12 medium-8 columns">
        <%= f.text_field :desc %>
      </div>
      <div class="small-12 medium-4 columns">
        <%= f.label :kind %>
      </div>
      <div class="small-12 medium-8 columns">
        <%= f.text_field :kind %>
      </div>
      <div class="small-12 medium-4 columns">
        <%= f.label :info %>
      </div>
      <div class="small-12 medium-8 columns">
        <%= f.text_field :info %>
      </div>
      <div class="small-12 medium-4 columns">
        <%= f.label :active %>
      </div>
      <div class="small-12 medium-8 columns">
        <%= f.check_box :active %>
      </div>
      <div class="small-12 medium-6 columns">
        <%= f.submit %>
      </div>
      <% end %>

    </div>
  </div>
</div>