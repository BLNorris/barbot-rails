<div class="row">
  <div class="small-12 medium-4 columns">
    <div id="drink-picture">
      Drink Picture Goes Here
    </div>
  </div>
  
  <div class="small-12 medium-8 columns">
    <div class="row">
      <div class="small-12 columns">
        <%# highlight the name with stuff here %>
        </br>
        <h1><%= recipe.name %></h1>
        </br>
      </div>
      <div class="small-12 columns">
        <h4><%= recipe.desc %></h4>
      </div>
    </div>
    <div class="row">
      <% @amounts.each do |a| %>
      <div class="small-8 medium-8 columns">
        <p><%= a.iname %></p>
      </div>
      
      <div class="small-4 medium-4 columns">
        <p><%= a.ml %> ml</p>
      </div>
      <% end %>
    </div>
    <div class="row">

      <div class="small-12 medium-6 columns ">
        <%= link_to "Hit me!", pour_recipe_path(recipe.id), :class => "button", :remote => true, confirm: "Please make sure there is a glass on the bot."%>
      </div>
      
      <div class="small-12 medium-6 columns">
        <%= link_to "Nope, take me back", recipes_path(), :class => "button alert", :remote => true %>  
      </div>
      
      <div class="small-12 columns">
        <h4><%= recipe.instructions %></h4>
      </div>
    </div>
  </div>
</div>
