<div class="row">
  <div class="small-12 medium-6 medium-offset-3 large-4 large-offset-4 columns">
    <h2>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="row">
      <div class="small-12 medium-3 columns">
        <%= f.label :fname , "First Name" %><br />
      </div>
      <div class="small-12 medium-9 columns">
        <%= f.text_field :fname, autofocus: true %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-9 columns">
        <%= f.label :lname, "Last Name" %><br />
      </div>
      <div class="small-12 medium-9 columns">
        <%= f.text_field :lname %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-9 columns">
        <%= f.label :email %><br />
      </div>
      <div class="small-12 medium-9 columns">
        <%= f.email_field :email %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-9 columns">
        <%= f.label :password %><br />
      </div>
      <div class="small-12 medium-9 columns">
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 medium-9 columns">
        <%= f.label :password_confirmation %><br />
      </div>
      <div class="small-12 medium-9 columns">
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <%= f.submit "Sign up", :class => "button" , :class => "button"  %>
      </div>
    </div>
    <% end %>
    <div class="row">
      <div class="small-12 columns">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
  
